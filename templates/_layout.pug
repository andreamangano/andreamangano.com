doctype html
html(lang=site.meta.lang)
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')

    title=site.meta.title

    meta(name='description' content=site.meta.description)

    meta(
    name="viewport"
    content="width=device-width, user-scalable=no, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0")

    link(
      href=`css/main__${version}.css`
      rel="stylesheet"
      type="text/css")

  body.site

    .site__page
      block page

    .site__footer
      footer.footer
        .footer__wrapper
          .footer__copyright!=site.footer.copyright
          .footer__update!=`Last update: ${updateDate}`


