extends _layout

block page
  .page-home

    .page-home__wrapper

      //- COVER
      section.page-home__section.page-home__section--cover
        .page-home__section-wrapper

          .section.section--cover
            .section.section__wrapper
              .section__index-wrapper
                .section__icon
                  include ../src/assets/images/logo-cover.svg
              .section__info-wrapper
                .section__info
                  h2.section__title!=home.cover.title
                  p.section__intro!=home.cover.intro
                  p.section__intro!=home.cover.subintro

                  .section__links
                    each link in site.links
                      if link.type === 'email'
                        a.section__link(href=`mailto:${link.href}?subject=Hi%20Andrea!`)=link.label
                      else
                        a.section__link(href=link.href target="_blank")=link.label

      //- SKILLS
      section.page-home__section.page-home__section--skills
        .page-home__section-wrapper

          .section.section--skills
            .section.section__wrapper
              .section__index-wrapper
                .section__icon
                  include ../src/assets/images/skills.svg

              .section__info-wrapper
                .section__info
                  h2.section__title!=home.skills.title
                  p.section__intro!=home.skills.intro
                  p.section__description!=home.skills.description

      //- EXPERIENCES
      section.page-home__section.page-home__section--experiences
        .page-home__section-wrapper

          .section.section--experiences
            .section.section__wrapper
              .section__index-wrapper
                .section__icon
                  include ../src/assets/images/experiences.svg

              .section__info-wrapper
                .section__info
                  h2.section__title!=home.experiences.title
                  p.section__intro!=home.experiences.intro
                  p.section__description!=home.experiences.description

                  .section__list
                    .the-best
                      .the-best__wrapper
                        h3.the-best__title!=home.done.title
                        .the-best__list
                          each item in home.done.list
                            .the-best__item
                              .item-check!=item

      // MINDSET
      section.page-home__section.page-home__section--mindset
        .page-home__section-wrapper

          .section.section--mindset
            .section.section__wrapper
              .section__index-wrapper
                .section__icon
                  include ../src/assets/images/mindset.svg

              .section__info-wrapper
                .section__info
                  h2.section__title!=home.mindset.title
                  p.section__intro!=home.mindset.intro
                  p.section__description!=home.mindset.description